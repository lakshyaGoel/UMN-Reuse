<div class="main">
	{{#if isUser}}
    <a href="./add/item"><span class="lgSpan">+ Add Item for Sale</span></a>
	{{/if}}
	<div class="columns lgWrap">
        {{#each items}}
            <div class="column is-one-third lgColumn">
                <div class="card">
                    <div class="card-image">
                        <figure class="image is-4by3">
                            <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                        </figure>
                    </div>
                    <header class="card-header">
                        <p class="card-header-title">
                            {{name}}
                        </p>
                        <a href="#" class="card-header-icon" aria-label="more options">
                          <span class="icon">
                            <i class="fa fa-angle-down" aria-hidden="true"></i>
                          </span>
                        </a>
                    </header>
                    <div class="card-content">
                        <div class="content">
                            {{description}}
                            <br>
                            <span class="price">${{price}}</span>
                        </div>
                    </div>
                    {{#if loggedIn}}
                        <footer class="card-footer">
                            {{#unless isUser}}
                                <a href="#" class="card-footer-item item-save">
	                                {{#if savedFlg}}Saved{{else}}Save{{/if}}
                                  </a>
                            {{/unless}}
                            {{#if isUser}}
                                <a href="#" class="card-footer-item item-delete">Delete</a>
                            {{/if}}
	                        <span class="is-hidden itemID">{{_id}}</span>
                        </footer>
                    {{/if}}
                </div>
            </div>
        {{/each}}
    </div>
</div>