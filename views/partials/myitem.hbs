<div class="columns">
	<div class="column">
		<header>My Items</header>
		<div class="columns  is-multiline">
      {{#each personalitems}}
          <div class="is-half column">
              <div class="card">
                  <div class="card-image">
                      <figure class="image is-4by3">
                          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                      </figure>
                  </div>
                  <header class="card-header">
                      <p class="card-header-title">
                          {{name}}
                      </p>
                      <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                          <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </a>
                  </header>
                  <div class="card-content">
                      <div class="content">
                          {{description}}

                          <span class="price">${{price}}</span>
                      </div>
                  </div>

                      <footer class="card-footer">
                          <a class="card-footer-item item-delete">Delete</a>
                          <a class="card-footer-item item-{{!save}}">interested</a>
	                      <span class="is-hidden itemID">{{this._id}}</span>
                          {{data}}
                      </footer>


              </div>
          </div>
      {{/each}}
		</div>
  </div>
	<div class="column">
		<h2>Saved Item</h2>
		<div class="savedCards columns  is-multiline">

		</div>
	</div>
</div>
