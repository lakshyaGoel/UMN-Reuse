<div class="columns">
  <div class="column">
    <center>
    <h1 class="title is-5">Items Posted</h1>

      {{#each personalitems}}
          <div class="is-half column cardColumn">
              <div class="card">
                  <div class="card-image">
                      <figure class="image is-4by3">
                          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                      </figure>
                  </div>
                  <header class="card-header">
                      <p class="card-header-title">
                          {{name}}
                      </p>
                      <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                          <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </a>
                  </header>
                  <div class="card-content">
                      <div class="content">
                          {{description}}
                          <br>
                          <span class="price">${{price}}</span>
                      </div>
                  </div>
                  <footer class="card-footer">
                      <a id="#" class="card-footer-item"><span class="deleteFunction" id="delete_{{this._id}}">Delete</span></a>
                      <a id="#" class="card-footer-item"><span class="interestedFunction" id="{{this._id}}">Customers</span></a>
                  </footer>

                      <!--Pop-up form-->
                      <div id="popUpFormV" class="modal" >
                       <div class="modal-background"></div>
                       <div class="modal-card">
                         <header class="modal-card-head">
                           <p class="modal-card-title">People Interested In Your Item</p>
                           <button class="delete" aria-label="close" onclick="document.getElementById('popUpFormV').style.display='none'"></button>
                         </header>
                         <section class="modal-card-body">
                           <p>YEAH</p>

                          {{data}}

                         </section>
                         <footer class="modal-card-foot">
                           <button class="button" onclick="document.getElementById('popUpFormV').style.display='none'">Cancel</button>
                         </footer>
                       </div>
                      </div>

              </div>
          </div>

      {{/each}}
    </center>
  </div>
