<!--Pop-up form-->
<div id="popUpFormV" class="modal" >
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">People Interested In Your Item</p>
			<button class="delete close-modal" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<p></p>
			<div class="user-list content">

			</div>
		</section>
	</div>
</div>

<div class="columns">
  <div class="column item-posted">
    <center>
    <h1 class="title is-5">Items Posted</h1>
    {{#each personalitems}}
          <div class="is-half column cardColumn">
              <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                      {{#each photo}}
                        {{#if localFlg}}
                          <img src="{{path}}" alt="Placeholder image">
                        {{else}}
                          <img src="{{path}}" alt="Placeholder image"  onerror="imgError(this);">
                        {{/if}}
                      {{else}}
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                      {{/each}}
                    </figure>
                </div>
                  <header class="card-header">
                      <p class="card-header-title">
                          {{name}}
                      </p>
                      <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                          <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </a>
                  </header>
                  <div class="card-content">
                      <div class="content">
                          {{description}}
                          <br>
                          <span class="price">${{price}}</span>
                      </div>
                  </div>
                  <footer class="card-footer">
                      <a class="card-footer-item"><span class="deleteFunction" id="delete_{{this._id}}">Delete</span></a>
                      <a class="card-footer-item my-item-card-customer-button">Customers</a>
	                  <span class="is-hidden save-customer-list">
		                  {{#if interested}}
		                  <ul>
			                  {{#each interested}}
				                  <li>{{this}}</li>
			                  {{/each}}
		                  </ul>
		                  {{else}}
			                  No one added this item...
		                  {{/if}}
	                  </span>
                  </footer>
              </div>
          </div>

      {{/each}}
    </center>
  </div>
	{{!-- END Item posted column--}}


  <div class="column">
    <center>
    <h1 class="title is-5">Items Saved</h1>
	  {{#each uItem}}
        <div class="is-half column column cardColumn">
            <div class="card">
              <div class="card-image">
                  <figure class="image is-4by3">
                    {{#each photo}}
                      {{#if localFlg}}
                        <img src="{{path}}" alt="Placeholder image">
                      {{else}}
                        <img src="{{path}}" alt="Placeholder image"  onerror="imgError(this);">
                      {{/if}}
                    {{else}}
                      <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    {{/each}}

                  </figure>
              </div>
                <header class="card-header">
                    <p class="card-header-title">
                        {{name}}
                    </p>
                    <a href="#" class="card-header-icon" aria-label="more options">
                      <span class="icon">
                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                      </span>
                    </a>
                </header>
                <div class="card-content">
                    <div class="content">
                        {{description}}
                        <span class="price">${{price}}</span>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
  </center>
	</div>
</div>
