<!--Pop-up form-->
<div id="popUpFormV" class="modal" >
	<div class="modal-background"></div>
	<div class="modal-card">
		<header class="modal-card-head">
			<p class="modal-card-title">People Interested In Your Item</p>
			<button class="delete close-modal" aria-label="close"></button>
		</header>
		<section class="modal-card-body">
			<p>Add this item by following people...</p>
			<div class="user-list content">

			</div>
		</section>
	</div>
</div>

<div class="columns">
  <div class="column item-posted">
    <h1 class="title is-5">Items Posted</h1>
	  <div class="columns is-multiline">
      {{#each personalitems}}
          <div class="column cardColumn">
              <div class="card">
                  <div class="card-image">
                      <figure class="image is-4by3">
                          <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                      </figure>
                  </div>
                  <header class="card-header">
                      <p class="card-header-title">
                          {{name}}
                      </p>
                      <a href="#" class="card-header-icon" aria-label="more options">
                        <span class="icon">
                          <i class="fa fa-angle-down" aria-hidden="true"></i>
                        </span>
                      </a>
                  </header>
                  <div class="card-content">
                      <div class="content">
                          {{description}}
                          <br>
                          <span class="price">${{price}}</span>
                      </div>
                  </div>
                  <footer class="card-footer">
                      <a class="card-footer-item"><span class="deleteFunction" id="delete_{{this._id}}">Delete</span></a>
                      <a class="card-footer-item my-item-card-customer-button">Customers</a>
	                  <span class="is-hidden save-customer-list">
		                  {{#if interested}}
		                  <ul>
			                  {{#each interested}}
				                  <li>{{this}}</li>
			                  {{/each}}
		                  </ul>
		                  {{else}}
			                  No people add this item...
		                  {{/if}}
	                  </span>
                  </footer>
              </div>
          </div>
      {{/each}}
	  </div>
  </div>
	{{!-- END Item posted column--}}


  <div class="column">
    <h1 class="title is-5">Items Saved</h1>
	  <div class="columns is-multiline">
    {{#each uItem}}
        <div class="column cardColumn">
            <div class="card">
                <div class="card-image">
                    <figure class="image is-4by3">
                        <img src="https://bulma.io/images/placeholders/1280x960.png" alt="Placeholder image">
                    </figure>
                </div>
                <header class="card-header">
                    <p class="card-header-title">
                        {{name}}
                    </p>
                    <a href="#" class="card-header-icon" aria-label="more options">
                      <span class="icon">
                        <i class="fa fa-angle-down" aria-hidden="true"></i>
                      </span>
                    </a>
                </header>
                <div class="card-content">
                    <div class="content">
                        {{description}}
                        <span class="price">${{price}}</span>
                    </div>
                </div>
            </div>
        </div>
    {{/each}}
	  </div>
  </div>
</div>
